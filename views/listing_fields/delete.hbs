{{#extends 'base'}}

{{#block 'content'}}

<h1>Deleting Theme No. {{field.id}}</h1>

<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />

    <div class="alert alert-danger">
        <p>Are you sure you want to delete theme {{field.name}}?</p>
        <input type="submit" class="btn btn-danger" value="Yes" />
        <a href="/listing_fields/{{title}}" class="btn btn-success">Cancel</a>
    </div>
</form>
{{/block}}
{{/extends}}