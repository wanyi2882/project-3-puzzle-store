{{#extends 'base'}}

{{#block 'content'}}
<h3>Update {{title}} ID {{field.id}}</h3>

<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />

    <label>Theme Name:</label>
    <input type="text" name="theme" value="{{field.name}}" />
    <input type="submit" value="Submit">
</form>

{{/block}}

{{/extends}}