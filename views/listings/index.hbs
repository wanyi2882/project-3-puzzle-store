{{#extends 'base'}}

{{#block 'content'}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Cost(Cents)</th>
            <th>Description</th>
            <th>Stock</th>
            <th>Length(cm)</th>
            <th>Breadth(cm)</th>
            <th>Brand</th>
            <th>Theme</th>
            <th>Size (Pieces)</th>
            <th>Age Group</th>
            <th>Difficulty Level</th>
            <th>Material</th>
            <th>Tags</th>
            <th>Frames</th>
            <th>Image</th>
        </tr>

    </thead>
    <tbody>
        {{#each listings}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.title}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                {{this.stock}}
            </td>
            <td>
                {{this.length}}
            </td>
            <td>
                {{this.breadth}}
            </td>
            <td>
                {{this.brand}}
            </td>
            <td>
                {{this.Theme.name}}
            </td>
            <td>
                {{this.Size.pieces}}
            </td>
            <td>
                {{this.AgeGroup.name}}
            </td>
            <td>
                {{this.DifficultyLevel.name}}
            </td>
            <td>
                {{this.Material.type}}
            </td>
            <td>
                {{#each this.Tag}}
                <span class="badge bg-secondary">
                    {{this.name}}
                </span>
                {{/each}}
            </td>
            <td>
                {{#each this.Frame}}
                <span class="badge bg-secondary">
                    {{this.material}}
                </span>
                {{/each}}
            </td>
            <td>
                <img class="img-fluid" src="{{this.image}}"/>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}